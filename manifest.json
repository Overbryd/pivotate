{
  "name": "Pivotaltracker Extension",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Submit a new story to Pivotaltracker",
  "icons":{
    "128": "icon-128.png",
    "48":  "icon-48.png",
    "16":  "icon-16.png"
  },
  "browser_action":{
    "default_icon":  "icon-18.png",
    "default_title": "Pivotaltracker Extension",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "permissions": [ "tabs", "http://*/", "https://*/", "https://www.pivotaltracker.com/services/*" ]
}
